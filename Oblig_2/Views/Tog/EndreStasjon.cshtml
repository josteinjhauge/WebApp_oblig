@model Oblig_2.Model.Stasjon

@{
    ViewBag.Title = "EndreStasjon";
}

<h2>Endre Stasjon</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.navn, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.navn, new { htmlAttributes = new { @class = "form-control navn-input" } })
                @Html.ValidationMessageFor(model => model.navn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sone, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.sone, new { htmlAttributes = new { @class = "form-control sone-input" } })
                @Html.ValidationMessageFor(model => model.sone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Endre" class="btn btn-VY btn-10margin" />
            </div>
            <div>
                <a href="/Tog/AdminStasjon" class="btn btn-VY btn-10margin">Tilbake </a>
            </div>
        </div>
    </div>
}