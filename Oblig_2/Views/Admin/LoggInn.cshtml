@model Oblig_2.Model.Admin

@{
    ViewBag.Title = "LoggInn";
}

<h2>Logg inn</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.navn, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.navn, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.navn, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.passord, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.PasswordFor(model => model.passord, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.passord, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Logg inn" class="btn btn-VY" />
            </div>
        </div>
    </div>
}